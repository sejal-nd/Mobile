# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)
  desc "Generate new localized screenshots -> Increment version number -> setup certs + profiles -> Create IPA -> Upload dSYMs -> Upload to App Store"
platform :ios do
  lane :uploadBuild do
    update_fastlane

    capture_screenshots(
      workspace: "Mobile.xcworkspace",
      scheme: ENV["SCREENSHOT_SCHEME"],
      output_directory: "./fastlane/screenshots"
    )

    build_ios_app(
      scheme: ENV["RELEASE_SCHEME"],
      silent: true,
      clean: true,
      include_bitcode: true,
      skip_build_archive: true,
      export_method: "app-store",
      archive_path: ENV["ARCHIVE_PATH"],
      output_directory: "./fastlane/IPA", # Destination directory. Defaults to current directory.
      output_name: "mobile.ipa",       # specify the name of the .ipa file to generate (including file extension)
      sdk: "iOS 10.0"        # use SDK as the name or path of the base SDK when building the project.
    )

    # Upload generated dSYMs
    unzip(file: "mobile.app.dSYM.zip",
      destination_path: "./fastlane/IPA/mobile.app.dSYM.zip"
    )
    appcenter_upload(
      api_token: ENV["TEST_APPCENTER_API_TOKEN"],
      owner_name: "Exelon-Digital-Projects",
      app_name: ENV["APPCENTER_APP_NAME"],
      upload_dsym_only: true,
      dsym: "./fastlane/IPA/mobile.app.dSYM"
    )

    deliver(
      app_identifier: ENV["APP_IDENTIFIER"],
      ipa: "./fastlane/IPA/mobile.ipa", # Same as output directory above
      username: "exelonutilitiesappleid@exeloncorp.com",
      submit_for_review: false,
      force: false,
      # metadata_path: ENV["METADATA_PATH"],
      screenshot_path: "./fastlane/screenshots"
    )

    clean_build_artifacts
  end
end

platform :ios do
  desc "Refresh DSYMS"

	lane :refresh_dsyms do
    # Download dSYM files from iTC
		download_dsyms(
      version: "latest",
      username: "exelonutilitiesappleid@exeloncorp.com",
      team_name: "EXELON BUSINESS SERVICES COMPANY, LLC",
      app_identifier: ENV["APP_IDENTIFIER"],
      output_directory: "./fastlane/downloaded_dSYMs"
    )
		unzip(
      file: Actions.lane_context[SharedValues::DSYM_PATHS][0],
      destination_path: "./fastlane/downloaded_dSYMs/mobile.app.dSYM.zip"
    )
		appcenter_upload(
			api_token: ENV["TEST_APPCENTER_API_TOKEN"],
			owner_name: "Exelon-Digital-Projects",
			app_name: ENV["APPCENTER_APP_NAME"],
			upload_dsym_only: true,
			dsym: "./fastlane/downloaded_dSYMs/" + ENV["APP_IDENTIFIER"] + ".dSYM"
		)

		clean_build_artifacts
	end
end
